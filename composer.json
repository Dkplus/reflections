{
    "name": "dkplus/reflection",
    "description": "Reflection on PHP classes that provides as many information about classes as possible",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Dkplus\\Reflection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Dkplus\\Reflection\\": "spec/",
            "test\\Dkplus\\Reflection\\": "tests/"
        }
    },
    "require": {
        "hoa/compiler": "^3.0",
        "phpdocumentor/type-resolver": "^0.4",
        "phpdocumentor/reflection-common": "^1.0"
    },
    "require-dev": {
        "doctrine/annotations": "^1.4",
        "hoa/cli": "2.17.01.11",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.0.1",
        "phpspec/phpspec": "^4.0",
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0",
        "roave/better-reflection": "^2.0"
    },
    "suggest": {
        "roave/better-reflection": "^2.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Oskar Pfeifer-Bley",
            "email": "oskar@programming-php.net"
        }
    ]
}
