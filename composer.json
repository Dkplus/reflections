        "phpunit/phpunit": "^6.0",
        "phpspec/phpspec": "^3.4",
        "roave/better-reflection": "^1.2",
        "squizlabs/php_codesniffer": "3.0.0RC4",
        "hoa/cli": "2.17.01.11"
    },
    "suggest": {
        "roave/better-reflection": "^1.2"
    },
