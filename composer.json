{
    "name": "dkplus/reflection",
    "description": "Reflection on PHP classes that provides as many information about classes as possible",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Dkplus\\Reflection\\": "src/"
        }
    },
    "autoload-dev": {
